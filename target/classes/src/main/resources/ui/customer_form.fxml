<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.collections.FXCollections?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.airline.reservation.ui.CustomerFormController"
            stylesheets="@../styles/airline-theme.css"
            style="-fx-background-color: #f8fafc;">

    <top>
        <VBox spacing="0" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
            <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 20 25 15 25;">
                <VBox spacing="5">
                    <Label text="New Reservation" style="-fx-font-size: 24px; -fx-font-weight: 800; -fx-text-fill: #1a365d;"/>
                    <Label text="Customer Information" style="-fx-font-size: 14px; -fx-text-fill: #718096;"/>
                </VBox>
                <Pane HBox.hgrow="ALWAYS"/>
                <VBox alignment="CENTER_RIGHT" spacing="5">
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <ProgressIndicator progress="0.25" prefWidth="20" prefHeight="20"/>
                        <Label text="Step 1 of 4" style="-fx-font-size: 12px; -fx-text-fill: #718096; -fx-font-weight: 600;"/>
                    </HBox>
                    <Label text="Personal Details" style="-fx-font-size: 11px; -fx-text-fill: #4299e1; -fx-font-weight: 600;"/>
                </VBox>
            </HBox>

            <ProgressBar progress="0.25" prefHeight="4" style="-fx-accent: #4299e1;">
                <padding>
                    <Insets top="0" left="25" right="25" bottom="10"/>
                </padding>
            </ProgressBar>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-border-color: transparent;">
            <VBox spacing="25" alignment="TOP_CENTER" style="-fx-padding: 30;">

                <!-- Personal Details Card -->
                <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 12, 0, 0, 3);">
                    <Label text="Personal Information" style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #2d3748;"/>

                    <GridPane hgap="15" vgap="12">
                        <columnConstraints>
                            <ColumnConstraint percentWidth="25" />
                            <ColumnConstraint percentWidth="25" />
                            <ColumnConstraint percentWidth="25" />
                            <ColumnConstraint percentWidth="25" />
                        </columnConstraints>

                        <Label text="Full Name *" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtCustomerName" promptText="Enter full name" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="3"/>

                        <Label text="Father's Name" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtFatherName" promptText="Father's name" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Date of Birth" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                        <DatePicker fx:id="dpDateOfBirth" promptText="YYYY-MM-DD" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                        <Label text="Gender *" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <ComboBox fx:id="cmbGender" promptText="Select gender" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="Profession" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                        <TextField fx:id="txtProfession" promptText="Occupation" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                    </GridPane>
                </VBox>

                <!-- Contact Details Card -->
                <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 12, 0, 0, 3);">
                    <Label text="Contact Details" style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #2d3748;"/>

                    <GridPane hgap="15" vgap="12">
                        <columnConstraints>
                            <ColumnConstraint percentWidth="25" />
                            <ColumnConstraint percentWidth="25" />
                            <ColumnConstraint percentWidth="25" />
                            <ColumnConstraint percentWidth="25" />
                        </columnConstraints>

                        <Label text="Address *" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextArea fx:id="txtAddress" promptText="Full address" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="3" prefRowCount="3" wrapText="true"/>

                        <Label text="Telephone *" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtTelephone" promptText="Phone number" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Travel Date *" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                        <DatePicker fx:id="dpTravelDate" promptText="YYYY-MM-DD" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                    </GridPane>
                </VBox>

                <!-- Concession Category -->
                <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 12, 0, 0, 3);">
                    <Label text="Concession Category (Optional)" style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #2d3748;"/>

                    <VBox spacing="10">
                        <RadioButton fx:id="rbNone" text="None" selected="true"/>
                        <RadioButton fx:id="rbStudent" text="Student - 25% discount"/>
                        <RadioButton fx:id="rbSenior" text="Senior Citizen - 13% discount"/>
                        <RadioButton fx:id="rbCancer" text="Cancer Patient - 56.9% discount"/>
                    </VBox>
                </VBox>

                <!-- Navigation Buttons -->
                <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0;">
                    <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #e53e3e; -fx-text-fill: white; -fx-font-weight: bold;"/>
                    <Button fx:id="btnNext" text="Next: Select Flight" onAction="#handleNext" style="-fx-background-color: #4299e1; -fx-text-fill: white; -fx-font-weight: bold;"/>
                </HBox>

            </VBox>
        </ScrollPane>
    </center>
</BorderPane>