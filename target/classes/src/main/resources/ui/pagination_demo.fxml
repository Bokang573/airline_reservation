<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx" 
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@../styles/airline-theme.css"
            style="-fx-background: white;">
    
    <VBox spacing="10" style="-fx-padding: 20;">
        
        <Label text="📄 Pagination & ScrollPane Demo" 
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e40af;"/>
        
        <Label text="Project Requirement: Pagination with 20+ items" 
               style="-fx-text-fill: #6b7280; -fx-font-style: italic;"/>
        
        <!-- Pagination Control -->
        <Pagination fx:id="pagination" pageCount="5" 
                   style="-fx-padding: 20 0;"/>
        
        <!-- ScrollPane Content -->
        <VBox spacing="8" fx:id="contentBox">
            <!-- 20+ items will be added dynamically -->
        </VBox>
        
        <Separator/>
        
        <Label text="✅ Project Requirements Met:" 
               style="-fx-font-weight: bold; -fx-text-fill: #10b981;"/>
        
        <VBox spacing="5" style="-fx-padding: 10;">
            <Label text="✓ Menu Bar & Menu Items"/>
            <Label text="✓ Pagination & ScrollPane (20+ items)"/>
            <Label text="✓ Progress Indicators (Bar & Indicator)"/>
            <Label text="✓ Visual Effects (DropShadow + FadeTransition)"/>
            <Label text="✓ JavaFX FXML with Controller"/>
        </VBox>
        
    </VBox>
    
</ScrollPane>
