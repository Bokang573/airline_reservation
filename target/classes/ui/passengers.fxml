<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.airline.reservation.ui.PassengersController"
            stylesheets="@../styles/airlink-theme.css">

    <!-- =============== TOP BAR =============== -->
    <top>
        <HBox spacing="18" alignment="CENTER_LEFT" styleClass="topbar">
            <Label text="Passenger Management"
                   style="-fx-font-size:22px; -fx-font-weight:700;"/>

            <Pane HBox.hgrow="ALWAYS"/>

            <Label text="Theme:" styleClass="small"/>
            <ToggleButton fx:id="themeToggle" text="Dark" onAction="#toggleTheme"/>
        </HBox>
    </top>


    <!-- =============== MAIN CONTENT =============== -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">

            <!-- Passenger fields -->
            <GridPane hgap="12" vgap="12" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>

                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtName" promptText="Full Name"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmail" promptText="Email Address"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPhone" promptText="+266 123 456"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Passport No:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <TextField fx:id="txtPassport" promptText="Passport Number"
                           GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <Label text="Nationality:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <TextField fx:id="txtNationality" promptText="Nationality"
                           GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                <Button text="Add Passenger" onAction="#addPassenger"
                        styleClass="btn-primary" prefWidth="180"
                        GridPane.rowIndex="3" GridPane.columnIndex="3"/>
            </GridPane>


            <!-- Table -->
            <VBox spacing="10" styleClass="card" prefHeight="380" prefWidth="880">
                <Label text="Passengers List" style="-fx-font-size:18px; -fx-font-weight:700;"/>

                <TableView fx:id="tablePassengers" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colName" text="Full Name" prefWidth="200"/>
                        <TableColumn fx:id="colEmail" text="Email" prefWidth="180"/>
                        <TableColumn fx:id="colPhone" text="Phone" prefWidth="140"/>
                        <TableColumn fx:id="colPassport" text="Passport No" prefWidth="140"/>
                        <TableColumn fx:id="colNationality" text="Nationality" prefWidth="140"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

</BorderPane>