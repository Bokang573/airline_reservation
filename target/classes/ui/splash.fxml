<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.airline.reservation.ui.LoadingController" stylesheets="@/styles/airlink-theme.css" alignment="CENTER">
  <VBox spacing="18" alignment="CENTER">
    <ImageView fx:id="splashLogo" fitHeight="120" preserveRatio="true" styleClass="splash-logo"/>
    <Label fx:id="splashText" text="Welcome to AirLink" style="-fx-font-size:18px; -fx-font-weight:700;"/>
    <ProgressBar fx:id="progress" prefWidth="380" />
  </VBox>
</StackPane>
