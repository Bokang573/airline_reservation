<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.airline.reservation.ui.ForgotPasswordController"
            stylesheets="@../styles/airline-theme.css"
            style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298);">
    <VBox spacing="18" alignment="CENTER" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox spacing="12" alignment="CENTER" style="-fx-background-color: rgba(255,255,255,0.12); -fx-background-radius:20; -fx-padding:30;">
            <Label text="Forgot Password" style="-fx-font-size:20px; -fx-text-fill:white;"/>
            <Label text="Enter your username to generate a temporary password" style="-fx-text-fill:#dfe6e9;"/>
            <TextField fx:id="txtUsername" promptText="Username"/>
            <HBox spacing="12" alignment="CENTER">
                <Button fx:id="btnGenerate" text="Generate Temp Password" onAction="#handleGenerateTemp"/>
                <Hyperlink fx:id="btnBack" text="Back to Login" onAction="#handleBack"/>
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>
