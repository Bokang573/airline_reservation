<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.airline.reservation.ui.FlightManagementController"
            prefWidth="1200" prefHeight="800">

    <top>
        <HBox style="-fx-background-color:#2c3e50; -fx-padding:10;">
            <Label text="ðŸ›©ï¸ Flight Management" style="-fx-text-fill:white; -fx-font-size:24px;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Close" onAction="#handleClose" style="-fx-background-color:#e74c3c; -fx-text-fill:white;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding:20;">

            <GridPane hgap="15" vgap="15">
                <Label text="Flight Number:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtFlightNumber" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Origin:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <TextField fx:id="txtOrigin" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <Label text="Destination:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtDestinationForm" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Price:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <TextField fx:id="txtPrice" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                <Label text="Departure Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dpDepartureDate" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label text="HH:mm:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <TextField fx:id="txtDepartureTime" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

                <Label text="Arrival Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dpArrivalDate" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Label text="HH:mm:" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                <TextField fx:id="txtArrivalTime" GridPane.rowIndex="3" GridPane.columnIndex="3"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Add" onAction="#handleAdd"/>
                <Button text="Update" onAction="#handleUpdate"/>
                <Button text="Delete" onAction="#handleDelete"/>
            </HBox>

            <TableView fx:id="tableFlights" onMouseClicked="#handleSelect" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colId" text="ID"/>
                    <TableColumn fx:id="colFlightNumber" text="Flight Number"/>
                    <TableColumn fx:id="colOrigin" text="Origin"/>
                    <TableColumn fx:id="colDestination" text="Destination"/>
                    <TableColumn fx:id="colDeparture" text="Departure"/>
                    <TableColumn fx:id="colArrival" text="Arrival"/>
                    <TableColumn fx:id="colPrice" text="Price"/>
                </columns>
            </TableView>

        </VBox>
    </center>
</BorderPane>
