<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="12" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.airline.reservation.ui.RegisterController">
    <padding><Insets top="30" left="30" right="30" bottom="30"/></padding>
    <Label text="Register new account" style="-fx-font-size:16px;"/>
    <GridPane hgap="8" vgap="8">
        <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Label text="Confirm:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <PasswordField fx:id="confirmField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>
    <HBox spacing="10">
        <Button text="Create Account" onAction="#onRegister"/>
        <Button text="Back to Login" onAction="#backToLogin"/>
    </HBox>
    <Label fx:id="lblMsg" textFill="red"/>
</VBox>
