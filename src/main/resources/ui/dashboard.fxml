<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.airline.reservation.ui.DashboardController"
            stylesheets="@../styles/airlink-theme.css"
            style="-fx-background-color: #f0f2f5;">

    <!-- TOP BAR -->
    <top>
        <HBox style="-fx-background-color: #2c3e50;"
              prefHeight="60" alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets left="15" right="15"/>
            </padding>

            <!-- Logo ImageView -->
            <ImageView fx:id="imgLogo" fitHeight="40" fitWidth="120" preserveRatio="true"/>

            <Label text="AirLink Dashboard"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblWelcome" text="Welcome, Admin"
                   style="-fx-text-fill: white; -fx-font-size: 12px;"/>
            <Button text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15;"/>
        </HBox>
    </top>

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox prefWidth="220" style="-fx-background-color: #34495e;">
            <ScrollPane fitToWidth="true" style="-fx-background: #34495e; -fx-border-color: transparent;">
                <VBox spacing="8" style="-fx-padding: 15;">
                    <Label text="NAVIGATION"
                           style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Button text="ðŸ“‹ New Reservation" onAction="#handleNewReservation"
                            maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-padding: 10; -fx-font-size: 13px; -fx-font-family: 'Segoe UI Emoji';"/>
                    <Button text="âœ–ï¸ Cancel Booking" onAction="#handleCancellation"
                            maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-padding: 10; -fx-font-size: 13px; -fx-font-family: 'Segoe UI Emoji';"/>
                    <Button text="ðŸ›©ï¸ Flight Management" onAction="#handleFlightManagement"
                            maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-padding: 10; -fx-font-size: 13px; -fx-font-family: 'Segoe UI Emoji';"/>
                    <Button text="ðŸ‘¥ Passenger Management" onAction="#handlePassengerManagement"
                            maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-padding: 10; -fx-font-size: 13px; -fx-font-family: 'Segoe UI Emoji';"/>
                    <Button text="ðŸ“Š Reports" onAction="#handleReports"
                            maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-padding: 10; -fx-font-size: 13px; -fx-font-family: 'Segoe UI Emoji';"/>
                    <Button text="âš™ï¸ Settings" onAction="#handleSettings"
                            maxWidth="Infinity" style="-fx-alignment: CENTER_LEFT; -fx-padding: 10; -fx-font-size: 13px; -fx-font-family: 'Segoe UI Emoji';"/>

                    <Region VBox.vgrow="ALWAYS"/>
                    <Separator style="-fx-background-color: #5d6d7e;"/>
                    <Label text="QUICK STATS"
                           style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-font-size: 12px;"/>
                    <Label fx:id="lblStats" text="Loading stats..."
                           style="-fx-text-fill: #bdc3c7; -fx-font-size: 11px; -fx-wrap-text: true;"/>
                </VBox>
            </ScrollPane>
        </VBox>
    </left>

    <!-- CENTER CONTENT -->
    <center>
        <VBox style="-fx-padding: 15;">
            <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-border-color: transparent;">
                <VBox spacing="15" style="-fx-padding: 5;">

                    <!-- WELCOME CARD -->
                    <VBox spacing="8" style="-fx-padding: 15;">
                        <Label text="Welcome to AirLink Reservation System"
                               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Label text="Manage your airline operations efficiently"
                               style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                        <Separator style="-fx-padding: 5 0;"/>
                        <Label text="Quick Tips:" style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
                        <VBox spacing="3" style="-fx-padding: 0 0 0 10;">
                            <Label text="â€¢ Use the sidebar to navigate between modules"
                                   style="-fx-text-fill: #555; -fx-font-size: 12px;"/>
                            <Label text="â€¢ Create new reservations using 'New Reservation'"
                                   style="-fx-text-fill: #555; -fx-font-size: 12px;"/>
                            <Label text="â€¢ Manage flights and schedules in 'Flight Management'"
                                   style="-fx-text-fill: #555; -fx-font-size: 12px;"/>
                            <Label text="â€¢ View reports for business insights"
                                   style="-fx-text-fill: #555; -fx-font-size: 12px;"/>
                        </VBox>
                    </VBox>

                    <!-- STATS CARDS -->
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                        </columnConstraints>

                        <VBox alignment="CENTER" spacing="5" style="-fx-padding: 15;" GridPane.columnIndex="0">
                            <Label text="ðŸ“‹" style="-fx-font-size: 20px; -fx-font-family: 'Segoe UI Emoji';"/>
                            <Label fx:id="lblTotalBookings" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                            <Label text="Total Bookings" style="-fx-font-size: 12px;"/>
                        </VBox>

                        <VBox alignment="CENTER" spacing="5" style="-fx-padding: 15;" GridPane.columnIndex="1">
                            <Label text="ðŸ›©ï¸" style="-fx-font-size: 20px; -fx-font-family: 'Segoe UI Emoji';"/>
                            <Label fx:id="lblActiveFlights" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                            <Label text="Active Flights" style="-fx-font-size: 12px;"/>
                        </VBox>

                        <VBox alignment="CENTER" spacing="5" style="-fx-padding: 15;" GridPane.columnIndex="2">
                            <Label text="ðŸ‘¥" style="-fx-font-size: 20px; -fx-font-family: 'Segoe UI Emoji';"/>
                            <Label fx:id="lblTotalPassengers" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                            <Label text="Total Passengers" style="-fx-font-size: 12px;"/>
                        </VBox>

                        <VBox alignment="CENTER" spacing="5" style="-fx-padding: 15;" GridPane.columnIndex="3">
                            <Label text="ðŸ’°" style="-fx-font-size: 20px; -fx-font-family: 'Segoe UI Emoji';"/>
                            <Label fx:id="lblTotalRevenue" text="\$0" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                            <Label text="Total Revenue" style="-fx-font-size: 12px;"/>
                        </VBox>
                    </GridPane>

                    <!-- RECENT ACTIVITY -->
                    <VBox spacing="10" style="-fx-padding: 15;">
                        <HBox alignment="CENTER_LEFT">
                            <Label text="Recent Activity"
                                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="Refresh" onAction="#handleRefresh"
                                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15; -fx-font-size: 12px;"/>
                        </HBox>

                        <TableView fx:id="tblRecentActivity" prefHeight="150" maxHeight="200">
                            <columns>
                                <TableColumn fx:id="colTime" prefWidth="100" text="Time"/>
                                <TableColumn fx:id="colActivity" prefWidth="150" text="Activity"/>
                                <TableColumn fx:id="colUser" prefWidth="120" text="User"/>
                                <TableColumn fx:id="colStatus" prefWidth="100" text="Status"/>
                            </columns>
                        </TableView>

                    </VBox>

                </VBox>
            </ScrollPane>
        </VBox>
    </center>

    <!-- BOTTOM STATUS BAR -->
    <bottom>
        <HBox style="-fx-background-color: #ecf0f1;" prefHeight="40" alignment="CENTER">
            <padding>
                <Insets left="15" right="15"/>
            </padding>
            <Label fx:id="lblStatus" text="System Status: Online" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Â© 2024 AirLink Reservation System v1.0" style="-fx-text-fill: #7f8c8d;"/>
